{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "api/*": ["./api/*"],
      "components/*": ["./components/*"],
      "context/*": ["./context/*"],
      "constants/*": ["./constants/*"],
      "images/*": ["./images/*"],
      "screens/*": ["./screens/*"],
      "styles/*": ["./styles/*"],
      "types/*": ["./types/*"],
      "i18n/*": ["./i18n/*"],
      "helpers/*": ["./helpers/*"]
    },
    "typeRoots": ["./src/types"]
  }
}
